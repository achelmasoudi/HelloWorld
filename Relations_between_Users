// For English with Other Languages
MATCH (u1:user), (u2:user)
WHERE u1.nativeLanguage = "English" AND u1.learningLanguage = "Arabic"
  AND u2.nativeLanguage = "Arabic" AND u2.learningLanguage = "English"
CREATE (u1) - [:Konuşur] -> (u2) RETURN u1,u2;

MATCH (u1:user), (u2:user)
WHERE u1.nativeLanguage = "English" AND u1.learningLanguage = "Turkish"
  AND u2.nativeLanguage = "Turkish" AND u2.learningLanguage = "English"
CREATE (u1) - [:Konuşur] -> (u2) RETURN u1,u2;

MATCH (u1:user), (u2:user)
WHERE u1.nativeLanguage = "English" AND u1.learningLanguage = "French"
  AND u2.nativeLanguage = "French" AND u2.learningLanguage = "English"
CREATE (u1) - [:Konuşur] -> (u2) RETURN u1,u2;

MATCH (u1:user), (u2:user)
WHERE u1.nativeLanguage = "English" AND u1.learningLanguage = "Spanish"
  AND u2.nativeLanguage = "Spanish" AND u2.learningLanguage = "English"
CREATE (u1) - [:Konuşur] -> (u2) RETURN u1,u2;

